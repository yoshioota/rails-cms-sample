<% if @comment.errors.any? %>
  $('.js_comment_form').html('<%= j render(partial: 'form', locals: {comment: @comment}) %>')
<% else %>
  $('.js_comment_form').html('<%= j render(partial: 'form', locals: {comment: Comment.new(article_id: @comment.article_id)}) %>')
  $('.js_comments').html('<%= j render(partial: 'u/articles/comments', locals: {comments: @article.comments.order(:created_at)}) %>')
<% end %>
